@model FoodMartMongoDB.Dtos.ProductDtos.CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = null;
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container  mt-5">
    <h2 class="mb-4">Kategori Ekle</h2>
    <form asp-action="CreateCategory" method="post">
        <div class="form-group mb-2">
            <label class="control-label">Ürün Adı</label>
            <input asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label class="control-label">Ürün Görsel</label>
            <input asp-for="ProductImage" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label class="control-label">Fiyat</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label class="control-label">Stok</label>
            <input asp-for="Stock" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
</div>
