@model List<FoodMartMongoDB.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-5">
    <h2 class="mb-4">Kategori Listesi</h2>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Kategori ID</th>
                <th>Kategori Adı</th>
                <th>İkon</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Icon</td>
                    <td><a href="@Url.Action("DeleteCategory", "Category", new { id = item.CategoryId })" class="btn btn-danger btn-sm">Sil</a></td>
                    <td><a href="@Url.Action("UpdateCategory", "Category", new { id = item.CategoryId })" class="btn btn-success btn-sm">Güncelle</a></td>
                </tr>
            </tbody>
        }


    </table>
    <a href="@Url.Action("CreateCategory", "Category",new { area = "Admin" })" class="btn btn-primary btn-sm">Ekle</a>
</div>


