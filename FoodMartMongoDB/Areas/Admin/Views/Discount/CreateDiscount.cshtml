@model FoodMartMongoDB.Dtos.DiscountDtos.CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = null;
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container  mt-5">
    <h2 class="mb-4">İndirim Ekle</h2>
    <form asp-action="CreateCategory" method="post">
        <div class="form-group mb-2">
            <label class="control-label">İndirim Oranı</label>
            <input asp-for="DiscountPercent" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label class="control-label">İndirim Başlığı</label>
            <input asp-for="DiscountTitle" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label class="control-label">İndirim Görsel</label>
            <input asp-for="DiscountImage" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label class="control-label">Açıklama</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
</div>