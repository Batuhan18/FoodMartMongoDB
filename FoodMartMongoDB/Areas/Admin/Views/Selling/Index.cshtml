@model List<FoodMartMongoDB.Dtos.SellingDtos.ResultSellingDto>
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-5">
    <h2 class="mb-4">Kategori Listesi</h2>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Satış ID</th>
                <th>Adet</th>
                <th>Toplam Tutar</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@item.SellingId</td>
                    <td>@item.Count</td>
                    <td>@item.TotalPrice</td>
                    <td><a href="@Url.Action("DeleteSelling", "Selling", new { id = item.SellingId })" class="btn btn-danger btn-sm">Sil</a></td>
                    <td><a href="@Url.Action("UpdateSelling", "Selling", new { id = item.SellingId })" class="btn btn-success btn-sm">Güncelle</a></td>
                </tr>
            </tbody>
        }


    </table>
    <a href="@Url.Action("CreateSelling", "Selling",new { area = "Admin" })" class="btn btn-primary btn-sm">Ekle</a>
</div>