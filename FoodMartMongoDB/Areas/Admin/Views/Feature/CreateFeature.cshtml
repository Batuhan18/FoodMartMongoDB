@model FoodMartMongoDB.Dtos.FeatureDtos.CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = null;
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container  mt-5">
    <h2 class="mb-4">Öne Çıkan Alan Ekle</h2>
    <form asp-action="CreateFeature" method="post">
        <div class="form-group mb-2">
            <label class="control-label">Öne Çıkan Görsel</label>
            <input asp-for="FeatureImage" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label class="control-label">Öne Çıkan Başlık</label>
            <input asp-for="FeatureTitle" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label class="control-label">Öne Çıkan Başlık 2</label>
            <input asp-for="FeatureHeader" class="form-control" />
        </div>
        <div class="form-group mb-2">
            <label class="control-label">Öne Çıkan Alt Başlık</label>
            <input asp-for="FeatureSubtitle" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
</div>
